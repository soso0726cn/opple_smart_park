/* pages/component_module/area_play_component/area_play_component.wxss */
.area_play_component_container {
  z-index: 999;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 370rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border: solid 2rpx #EEEEEE;
}

.area_play_component_container .title {
  position: relative;
  margin-left: 30rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #333333;
}

.area_play_component_container .close {
  position: absolute;
  right: 0;
  top: 0;
  background-color: transparent;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close .close_image {
  width: 26rpx;
  height: 26rpx;
}

.area_play_component_container .area_play_list_container {
  position: relative;
  width: 100vw;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.area_play_list_container .list_title{
  position: relative;
  /* margin-left: 30rpx; */
  line-height: 70rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  width: 110rpx;
}

.area_play_list_container .list_choose_container {
  position: relative;
  width: 400rpx;
  height: 70rpx;
  background-color: #eeeeee;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list_choose_container .choose_title {
  position: relative;
  width: 400rpx;
  line-height: 70rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
}

.area_play_list_container .area_play_image {
  position: relative;
  width: 74rpx;
  height: 74rpx;
  margin-left: 40rpx;
}


/* 音量 */
.area_play_component_container .light_container {
  position: relative;
  width: 100vw;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.light_container .light_title {
  position: relative;
  /* margin-left: 30rpx; */
  line-height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  width: 110rpx;
}

.light_container .light_list_container {
  position: relative;
  width: 520rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* background-color: rebeccapurple; */
}

.light_list_container .light_item {
  position: relative;
  width: 80rpx;
  height: 50rpx;
  border: solid lightgray 1rpx;
  border-radius: 10rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #333333;
  line-height: 50rpx;
}

.light_list_container .active {
  color: white;
  background-color: #2F7DF6;
}

/* 停止播放 */
.area_play_component_container .stop {
  position: relative;
  width: 590rpx;
  margin-left: 80rpx;
  height: 74rpx;
  border-radius: 37rpx;
  background-color: #2F7DF6;
  line-height: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: white;
  text-align: center;
  line-height: 74rpx;
}