/* pages/component_module/videoModal/videoModal.wxss */

.video_container {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 670rpx;
  left: 0;
  bottom: 0;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 999;
}

.video-top-image {
  position: absolute;
  display: flex;
  width: 705rpx;
  height: 227rpx;
  top: 15rpx;
}

.video-top-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 94%;
  height: 227rpx;
  margin-top: 15rpx;
}

.video-top-bg .title {
  position: relative;
  display: flex;
  margin-left: 45rpx;
  margin-top: 22rpx;
  font-size: 32rpx;
  color: white;
}

.video-top-bg .device {
  position: relative;
  display: flex;
  margin-left: 50rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  color: white;
}

.video-top-bg .status {
  position: relative;
  display: flex;
  margin-left: 50rpx;
  /* margin-top: 10rpx; */
  font-size: 28rpx;
  color: white;
}

.video-top-bg .time {
  position: relative;
  display: flex;
  margin-left: 50rpx;
  /* margin-top: 10rpx; */
  font-size: 28rpx;
  color: white;
}

.video-top-bg .close {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 20rpx;
  right: 30rpx;
}

.video-top-bg .video {
  position: absolute;
  width: 102rpx;
  height: 102rpx;
  top: 62.5rpx;
  right: 85rpx;
}

.video-bottom-bg {
  position: relative;
  display: flex;
  width: 94%;
  height: calc(100% - 272rpx);
  margin-top: 15rpx;
}
