/* pages/component_module/select_component/select_component.wxss */
.container {
  z-index: 999;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: transparent;
}

.container .play_list_component_container {
  z-index: 1000;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 667rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: scroll;
  border: solid 2rpx #EEEEEE;
}

.play_list_component_container .picker_container {
  width: 100%;
  height: 567rpx;
  background-color: white;
}


.picker_select {
  text-align: center;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.picker_select .picker_title {
  width: 100%;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
}

.sure_view {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sure_view .close {
  width: 220rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #EEEEEE;
  text-align: center;
  color: rgb(58, 150, 250);
  line-height: 80rpx;
}

.sure_view .sure {
  width: 220rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
  background-color: rgb(58, 150, 250);
  text-align: center;
  color: white;
  line-height: 80rpx
}


