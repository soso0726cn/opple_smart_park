}

.product_detail_container .more_container {
  position: relative;
  width: 100%;
  height: 378rpx;
  display: flex;
  align-items: center;
}

.more_container .left_container {
  position: relative;
  width: 380rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-evenly; */
}

.left_container .left_title {
  margin-left: 30rpx;
  width: 350rpx;
  line-height: 60rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: white;
