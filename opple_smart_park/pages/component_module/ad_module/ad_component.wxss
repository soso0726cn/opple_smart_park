}

.more_container .right_container {
  position: relative;
  width: 310rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.right_container .right_title {
  width: 310rpx;
  height: 56rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Medium;
