/* pages/component_module/area_light_component/area_light_component.wxss */

.container {
  z-index: 999;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: transparent;
}

.area_light_component_container {
  z-index: 999;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border: solid 2rpx #EEEEEE;
}

/* 标题 */
.area_light_component_container .title {
  position: relative;
  margin-left: 30rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #333333;
}


.area_light_component_container .close {
  position: absolute;
  right: 0;
  top: 0;
  background-color: transparent;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close .close_image {
  width: 26rpx;
  height: 26rpx;
}


/* 状态 */
.area_light_component_container .status_container {
  position: relative;
  width: 100vw;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status_container .status_title {
  position: relative;
  /* margin-left: 30rpx; */
  line-height: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  width: 110rpx;
}

.status_container .status_open {
  position: relative;
  width: 220rpx;
  height: 80rpx;
  border: solid lightgray 1rpx;
  border-radius: 40rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  line-height: 80rpx;
}

.status_container .select_open {
  color: white;
  background-color: rgb(58, 150, 250);
  border: none;
}

/* .status_container .div {
  width: 80rpx;
  height: 80rpx;
  color: transparent;
} */

.status_container .status_close {
  position: relative;
  width: 220rpx;
  height: 80rpx;
  border: solid lightgray 1rpx;
  border-radius: 40rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  line-height: 80rpx;
  margin-left: 80rpx;
}


.status_container .select_close {
  color: white;
  background-color: rgb(58, 150, 250);
  border: none;
}

/* 调光 */
.area_light_component_container .light_container {
  position: relative;
  width: 100vw;
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.light_container .light_title {
  position: relative;
  /* margin-left: 30rpx; */
  line-height: 170rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  width: 110rpx;
}

.light_container .light_list_container {
  position: relative;
  width: 520rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.light_list_container .light_item {
  position: relative;
  width: 80rpx;
  height: 50rpx;
  border: solid lightgray 1rpx;
  border-radius: 10rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #333333;
  line-height: 50rpx;
}

.light_list_container .active {
  color: white;
  background-color: #2F7DF6;
}

.light_container .light_sure_image {
  width: 74rpx;
  height: 74rpx;
  margin-left: 40rpx;
}