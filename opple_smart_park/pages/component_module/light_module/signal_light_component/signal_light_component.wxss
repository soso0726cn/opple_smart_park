/* pages/component_module/light_module/signal_light_component/signal_light_component.wxss */

.signal_light_component_container {
  width: 100%;
  height: 100vh;
  z-index: 1000;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  background-color: transparent;

}

.signal_light_component_container .product_light_component_container {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 620rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  align-items: center;
  border: solid 2rpx #EEEEEE;
  box-shadow:0px -3px 5px #888888
}

/* 详细内容 */
.product_light_component_container .product_detail_container {
  position: relative;
  width: 690rpx;
  height: 320rpx;
  margin-top: 20rpx;
}

.product_detail_container .detial_image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}


.product_detail_container .close {
  position: absolute;
  right: 0;
  top: 0;
  background-color: transparent;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close .detail_close {
  width: 26rpx;
  height: 26rpx;
}


