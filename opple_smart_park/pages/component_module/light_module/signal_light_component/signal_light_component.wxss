.product_detail_container .detail_title {
  position: relative;
  margin-left: 30rpx;
  line-height: 92rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: white;
}

.product_detail_container .more_container {
  position: relative;
  width: 100%;
  height: 228rpx;
  display: flex;
  align-items: center;
}

.more_container .left_container {
  position: relative;
  width: 380rpx;
  height: 100%;
  display: flex;
  flex-direction: column;

}

.left_container .left_title {
  margin-left: 30rpx;
  width: 350rpx;
  height: 56rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: white;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
}

.more_container .right_container {
  position: relative;
  width: 310rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.right_container .right_title {
  width: 310rpx;
  height: 56rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: white;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
}

.right_container .time {
  font-size: 18rpx;
}

/* 状态 */
.product_light_component_container .status_container {
  position: relative;
  width: 100vw;
  margin-top: 50rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status_container .status_title {
  position: relative;
  /* margin-left: 30rpx; */
  line-height: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  width: 110rpx;
}

.status_container .status_open {
  position: relative;
  width: 220rpx;
  height: 80rpx;
  border: solid lightgray 1rpx;
  border-radius: 40rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  line-height: 80rpx;
}

.status_container .select_open {
  color: white;
  background-color: rgb(58, 150, 250);
  border: none;
}


.status_container .status_close {
  position: relative;
  width: 220rpx;
  height: 80rpx;
  border: solid lightgray 1rpx;
  border-radius: 40rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  line-height: 80rpx;
  margin-left: 80rpx;
}



.status_container .select_close {
  color: white;
  background-color: rgb(58, 150, 250);
  border: none;
}

/* 调光 */
.product_light_component_container .light_container {
  position: relative;
  width: 100vw;
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.light_container .light_title {
  position: relative;
  /* margin-left: 30rpx; */
  line-height: 170rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  width: 110rpx;
}

.light_container .light_list_container {
  position: relative;
  width: 520rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.light_list_container .light_item {
  position: relative;
  width: 80rpx;
  height: 50rpx;
  border: solid lightgray 1rpx;
  border-radius: 10rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #333333;
  line-height: 50rpx;
}

.light_list_container .active {
  color: white;
  background-color: #2F7DF6;
}

.light_container .light_sure_image {
  width: 74rpx;
  height: 74rpx;
  margin-left: 40rpx;
}