/* pages/component_module/live_modal/live_modal.wxss */

.live_component_container {

  width: 100%;
  height: 100vh;
  z-index: 1000;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  background-color: transparent;
}

.live_component_container .live_container {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 740rpx;
  left: 0;
  bottom: 0;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  border: solid 2rpx #EEEEEE;
  z-index: 999;
  box-shadow:0px -3px 5px #888888
}

.live_top_bg {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
}

.live_top_bg .title {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 32rpx;
  color: #515151;
}

.live_top_bg .close {
  position: absolute;
  display: flex;
  align-items: center;
  right: 0;
  background-color: transparent;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
}

.close .close_image {
  width: 32rpx;
  height: 32rpx;
}

.live_bottom_bg {
  display: relative;
  width: 95%;
  height: calc(100% - 130rpx);
  margin-top: 10rpx;
  background-color: royalblue;
}

.live_main{
  width: 95%;
  height: calc(100% - 130rpx);
  position: absolute;
}

.live_controller_layout{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  /* opacity: 0.5; */
  display: relative;
  right: 0;
  bottom: 0;
  margin-right: 5%;
  margin-bottom: 7.5%;
}

.live_container_bg{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
}

.live_controller_arrow_column{
  width: 40%;
  height: 80%;
  z-index: 100;
}

.live_controller_arrow_row{
  width: 80%;
  height: 40%;
  z-index: 100;
}

.live_controller_up_down_layout{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  display: inline-flex;
  flex-direction: column;
}

.live_controller_up{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-shrink: 1;
  align-items: center;
}

.live_controller_down{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-shrink: 1;
  justify-content: flex-end;
  align-items: center;
}

.live_controller_left_right_layout{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  display: inline-flex;
  flex-direction: row;
}

.live_controller_left{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-shrink: 1;
  justify-content: center;
}

.live_controller_right{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-shrink: 1;
  align-items: flex-end;
  justify-content: center;
}

