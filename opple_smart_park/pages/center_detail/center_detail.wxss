page {
  background-color: #F4F5F6;
  width: 100%;
  height:100%;
}

.container {
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.navigator_bottom{
  width: 100%;
  height: 10%;
  background-color: #027aff;
}

.scroll_body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: eeeeee;
}


.center_margin{
  width: 100%;
  height: 20rpx;
}

.center_event_info_display{
  margin-top: 0rpx;
}
.center_event_handler_edit{
  margin-top: 0rpx;
}

.center_event_handler_display{
  margin-top: 0rpx;
}

.center_sender_handler_display{
  margin-top: 0rpx;
}

.button_container{
  width: 100%;
  height: 100rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.ignore_button {
  position: relative;
  display: flex;
  width: calc(100% - 200rpx);
  height: 100%;
  background-color: #AABDCE;
  border-radius: 10rpx;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}

.submit_button {
  position: relative;
  display: flex;
  width: calc(100% - 200rpx);
  height: 100%;
  background-color: #027aff;
  border-radius: 10rpx;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}