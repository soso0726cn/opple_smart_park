/* pages/equipment/equipment.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  width: 100vw;
	height: 100%;
  flex-direction: column;
  background-color: #f5f5f5;
  margin-bottom: 50rpx;
}

.top_container {
  margin-top: 20rpx;
}

.config_container {
  position: relative;
  display: flex;
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  background-color: white;
}

.item-background {
  position: relative;
  display: flex;
  width: 100vw;
  height: 100rpx;
  align-items: center;
}

.item-background .title {
  position: relative;
  display: flex;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #515151;
}

.item-background .line {
  position: absolute;
  display: flex;
  width: 100%;
  height: 2rpx;
  bottom: 0;
  background-color: #F3F3F3;
}

.item-background .select {
  position: absolute;
  display: flex;
  width: 50rpx;
  height: 50rpx;
  right: 30rpx;
}


.confirm-button {
  position: relative;
  display: flex;
  width: calc(100% - 200rpx);
  height: 80rpx;
  margin: 80rpx auto auto auto;
  background-color: green;
  border-radius: 10rpx;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}