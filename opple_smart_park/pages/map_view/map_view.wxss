/* pages/map_view/map_view.wxss */

.container {
  width: 100%;
  height: 100vh;
  background-color: aliceblue;
}

.bgMap {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
}

/* 顶部 */
.title_view_container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  z-index: 999;
  display: flex;
  align-items: center;
  background-color: #2F7DF6;
  align-items: center;
}

.title_view_container .title_map {
  position: relative;
  margin-left: 30rpx;
  width: 44rpx;
  height: 44rpx;
}

.title_view_container .title_item {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  left: 110rpx;
  right: 200rpx;
  text-align: center;
  line-height: 150rpx;
  color: white;
  background-color: rgb(58, 150, 250);
  border-radius: 35rpx;
}

.title_view_container .title_voice {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  right: 115rpx;
}

.title_view_container .title_light {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  right: 30rpx;
}


/* 消息 */
.message_container {
  position: absolute;
  left: 20rpx;
  top: 170rpx;
  z-index: 999;
  width: 100rpx;
  height: 100rpx;
  background-color: aqua;
}

.message_report {
  position: absolute;
  right: 20rpx;
  top: 170rpx;
  z-index: 999;
  width: 100rpx;
  height: 100rpx;
  background-color: aquamarine;
}

/* 点击地图显示灯杆操作 */
.night_container {
  position: absolute;
  z-index: 999;
  left: 20rpx;
  bottom: 0rpx;
  height: 300rpx;
  width: 710rpx;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
}

.night_container .night_title {
  width: 100%;
  padding-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
}

.night_container .night_buttons {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.night_buttons .button_container {
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.button_container .button_image {
  width: 110rpx;
  height: 110rpx;
}

.button_container .button_title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
}

/* 地图大小缩放 */
.scale_container {
  position: absolute;
  z-index: 999;
  left: 20rpx;
  bottom: 340rpx;
  width: 100rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}

.scale_plus {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background-color: rebeccapurple;
}

.scale_reduce {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background-color: blue;
}

/* 区域广播 */
.area_voice_container {
  position: absolute;
  z-index: 999;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height: 285rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
}

.area_voice_container .area_title {
  width: 100%;
  padding-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
}

.area_voice_container .area_voice {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  /* justify-content: center; */
}

.area_voice .voice_title {
  font-family: PingFangSC-Regular;
  line-height: 120rpx;
  color: #333333;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.area_voice .voice_detial {
  position: relative;
  width: 70rpx;
  height: 50rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.area_voice .light {
  position: relative;
  width: 150rpx;
  height: 80rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
  text-align: center;
  border: solid 1rpx lightgray;
  border-radius: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
}

.light_on_select {
  background-color: blue;
  color: white;
}

.light_off_select {
  background-color: blue;
  color: white;
}

.voice_detial .voice_text {
  position: relative;
  width: 100%;
  height: 100%;
  border: solid 1rpx lightgray;
  border-radius: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  line-height: 50rpx;
  color: black;
  text-align: center;
}

.voice_detial .active {
  color: white;
  background-color: #2F7DF6;
}

.area_voice .voice_open {
  position: absolute;
  width: 73rpx;
  height: 73rpx;
  right: 30rpx;
}

.area_voice_container .area_stop {
  width: 630rpx;
  height: 80rpx;
  margin-left: 60rpx;
  text-align: center;
  color: white;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #2F7DF6;
}


/* 显示切换项目 */
.change_title_container {
  position: absolute;
  z-index: 1000;
  width: 100%;
  left: 0;
  top: 0;
  height: 100vh;
  background-color: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.change_title_container .change_item {
  width: 350rpx;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change_item .change_title {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  line-height: 100rpx;
}

/* 灯杆广播 */
.pole_broadcast_container {
  height: 700rpx;
}

.braodcast_image_container {
  width: 100%;
  height: 340rpx;
  display: flex;
  position: relative;
}

.braodcast_image_container .braodcast_image {
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  width: 690rpx;
  height: 320rpx;
}

.braodcast_image_container .braodcast_close {
  position: absolute;
  right: 60rpx;
  top: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.braodcast_image_container .braodcast_desc_container {
  position: relative;
  width: 500rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.braodcast_desc_container .braodcast_title {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  margin-top: 20rpx;
  line-height: 80rpx;
  color: white;
  padding-left: 80rpx;
}

.braodcast_desc_container .braodcast_detail {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  line-height: 60rpx;
  color: white;
  padding-left: 80rpx;
  white-space:nowrap;/* 不换行 */
  overflow:hidden;
  text-overflow:ellipsis;
}

.braodcast_image_container .braodcast_desc_omage {
  position: relative;
  width: 200rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.braodcast_desc_omage .desc_image {
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

.music_container {
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.music_container .music {
  width: 300rpx;
  height: 80rpx;
  border-radius: 20rpx;
  border: solid 1rpx lightgray;
  display: flex;
  align-items: center;
  justify-content: center;
}

.music .music_title {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333333;
}

.music_action {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: blue;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  line-height: 30rpx;
  color: white;
}

/* 照明 */
.pole_light_container {
  height: 650rpx;
  width: 100%;
}
.braodcast_image_container .light_desc_container {
  position: relative;
  width: 325rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}

.light_title {
  position: absolute;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  top: 20rpx;
  line-height: 80rpx;
  color: white;
  left: 80rpx;
}

.light_desc_container .light_time {
  font-size: 20rpx;
}