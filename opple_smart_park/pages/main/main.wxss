/* pages/main/main.wxss */

page {
  background-color: #F4F5F6;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.top-background {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 420rpx;
  background-color: #2F7DF6;
  border-radius: 0 0 50rpx 50rpx;
}

.top-background .location {
  position: relative;
  width: 163rpx;
  height: 166rpx;
  margin-top: 50rpx;
}

.city-bg {
  position: absolute;
  width: 748rpx;
  height: 367rpx;
  top: 0;
}

.item-background {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 850rpx;
  bottom: 40rpx;
}

.item-background .top {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 410rpx;
}

.left {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: calc(50% - 40rpx);
  height: 100%;
  margin-left: 25rpx;
  border-radius: 30rpx;
  background-color: white;
  box-shadow: 0 5px 12px 0 rgba(180, 180, 180, 0.2);
}

.center-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 190rpx;
}

.center-bg .icon {
  width: 112rpx;
  height: 112rpx;
}

.center-bg .text {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
}

.right {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: calc(50% - 40rpx);
  height: 100%;
  margin-right: 25rpx;
  border-radius: 30rpx;
  background-color: white;
  box-shadow: 0 5px 12px 0 rgba(180, 180, 180, 0.2);
}

.item-background .bottom {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 410rpx;
}
