/* pages/visitor/visitor.wxss */
page{
  width: 100%;
  height:100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.backgroundLayout{
  width: 100%;
  height: 100%;
  position: relative;

}

.backgroundTitle{
  width: 50%;
  height: 10%;
  position: relative;
  margin-left: 30rpx;
  margin-top: 1.5vh;
}

.backgroundImage{
  width: 100%;
  height: 100%;
  position: absolute;
}

.backgroundPole{
  width: 80%;
  height: 80%;
  position: absolute;
  margin-top: 12.5vh;
}

.mainbody {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  
}

.bodyTop{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-shrink:60; 
  margin-left: 330rpx;
}

.bodyTopImage{
  width: 300rpx;
  height: 200rpx;
  display: inline-flex;
  flex-direction: column;
  border-radius: 40rpx;
  margin-top: 100rpx;
}

.bodyTopItem{
  width: auto;
  height: auto;
  display: inline-flex;
  flex-direction: column;
  margin-right: 0rpx;
  margin-top: 38vh;
}

.bodyTopItemInfoTitle{
  width: auto;
  height: auto;
  display: inline-flex;
  font-size: 60rpx;
  font-weight: bold;
  align-items:center;
  justify-content: center;
  color: black;
}

.bodyTopItemInfoContent{
  width: 300rpx;
  height: auto;
  display: inline-flex;
  justify-content: start;
  font-size: 35rpx;
  color: black;
  text-align: left; 
  line-height:60rpx;
  margin-top: 10rpx;
}

.bodyTopItemInfoContentEnd{
  width: auto;
  height: auto;
  display: inline-flex;
  justify-content: start;
  font-size: 35rpx;
  color: black;
  text-align: left; 
  line-height:60rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.bodyBottom{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink:210;
}

.bodyBottomScroll{
  width: 92%;
  height: 100%;
}

.bodyMargin{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink:230;
}

.bodyBottomContainer{
  height: 100%;
  width: auto;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
} 

.bodyBottomItem{
  width: 200rpx;
  /* height: 100%; */
  height: 200rpx;
  display: inline-flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.bodyBottomItemSelected{
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  border-radius: 10px;
  /* background-color: rgb(214,241,252); */
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow:0px 4px 5px #888888
}

.bodyBottomItemNormal{
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  border-radius: 10px;
  /* border: solid white 2rpx; */
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow:0px 4px 5px #888888
  
}

.bodyBottomItemTop{
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-shrink: 1;
}

.bodyBottomItemBottom{
  width: 100%;
  height: 100%;
  flex-shrink: 1;
  display: inline-flex;
  flex-direction: column-reverse;
  
}

.bodyBottomItemRightTopIconContainer{
  width:50%;
  height:50%;
  margin-right: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.bodyBottomItemLeftTopIcon{
  width:30%;
  height:60%;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.bodyBottomItemRightTopIcon{
  width: 50%;
  height: 65%;
}

.bodyBottomItemSelectedText{
  width: auto;
  height: auto;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: black;
}

.bodyBottomItemNormalText{
  width: auto;
  height: auto;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: white;
}

.divLine{
  background: black;
  width: 100%;
  height: 5rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
 }