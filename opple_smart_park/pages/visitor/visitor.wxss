/* pages/visitor/visitor.wxss */

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.backgroundLayout{
  width: 100vw;
  height: 100vh;
  position: relative;
}

.backgroundImage{
  width: 100vw;
  height: 100vh;
  position: absolute;
}

.mainbody {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  
}

.bodyTop{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-shrink:60; 
  margin-left: 330rpx;
}

.bodyTopImage{
  width: 300rpx;
  height: 250rpx;
  display: inline-flex;
  flex-direction: column;
  border-radius: 40rpx;
  margin-top: 200rpx;
}

.bodyTopItem{
  width: auto;
  height: auto;
  display: inline-flex;
  flex-direction: column;
  margin-top: 110rpx;
  margin-right: 100rpx;
}

.bodyTopItemInfoTitle{
  width: auto;
  height: auto;
  display: inline-flex;
  font-size: 50rpx;
  color: blue;
  margin-bottom: 40rpx;
  align-items:center;
  justify-content: center;
  font-weight: bold;
}

.bodyTopItemInfoContent{
  width: auto;
  height: auto;
  display: inline-flex;
  align-items:center;
  justify-content: center;
  font-size: 30rpx;
  color: blue;
  margin-bottom: 30rpx;
}

.bodyBottom{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink:210;
}

.bodyMargin{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink:230;
}

.bodyBottomContainer{
  height: 100%;
  width: auto;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
} 

.bodyBottomItem{
  width: 200rpx;
  /* height: 100%; */
  height: 200rpx;
  display: inline-flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.bodyBottomItemSelected{
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  border-radius: 5px;
  background-color: rgb(214,241,252);
}

.bodyBottomItemNormal{
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  border-radius: 5px;
  border: solid white 2rpx;
}

.bodyBottomItemTop{
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-shrink: 1;
}

.bodyBottomItemBottom{
  width: 100%;
  height: 100%;
  flex-shrink: 1;
  display: inline-flex;
  flex-direction: column-reverse;
  
}

.bodyBottomItemRightTopIconContainer{
  width:50%;
  height:50%;
  margin-right: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.bodyBottomItemLeftTopIcon{
  width:25%;
  height:50%;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.bodyBottomItemRightTopIcon{
  width: 50%;
  height: 65%;
}

.bodyBottomItemSelectedText{
  width: auto;
  height: auto;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: black;
}

.bodyBottomItemNormalText{
  width: auto;
  height: auto;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: white;
}