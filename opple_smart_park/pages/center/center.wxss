/* pages/center/center.wxss */

@import '../device_list/device_list.wxss';

.swiper-bg {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 480rpx;
  height: 100%;
}

.swiper_box {
	position: absolute;
	top: 120rpx;
  left: 0;
  bottom: 20rpx;
	display: block;
	width: 100%;
	height: calc(100% - 120rpx);
	overflow: hidden;
}

.talents_list {
	width: 100%;
  height: 100%;
}

.item-background {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 160rpx;
  margin: 10rpx 25rpx 20rpx 25rpx;
  border-radius: 20rpx;
  background-color: white;
}

.item-background .top-bg {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  height: 50%;
}

.top-bg .title {
  position: relative;
  display: flex;
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #515151;
}

.top-bg .status {
  position: relative;
  display: flex;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #ababab;
}

.item-background .bottom-bg {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 90%;
  height: 50%;
}

.bottom-bg .priority {
  position: relative;
  display: flex;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #ababab;
}

.bottom-bg .time {
  position: relative;
  display: flex;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #ababab;
}