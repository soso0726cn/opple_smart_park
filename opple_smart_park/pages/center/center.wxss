/* pages/center/center.wxss */

.container {
  width: 100%;
  height: 100vh;
  background-color: lightgray;
  display: flex;
  flex-direction: column;
}

.center_container {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
}

.center_container .title {
  width: 690rpx;
  padding-left: 30rpx;
  line-height: 80rpx;
  color: #555555;
}

.center_container .items_container {
  width: 100%;
  height: 220rpx;
  background-color: white;
  display: flex;
  padding-left: 30rpx;
}

.items_container .item_container {
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.item_container .item_image {
  width: 100rpx;
  height: 100rpx;
  background-color: teal;

}

.item_container .item_title {
  margin-top: 20rpx;
  width: 100%;
  line-height: 30rpx;
  text-align: center;
}