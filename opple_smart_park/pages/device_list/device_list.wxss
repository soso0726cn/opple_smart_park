/* pages/device_list/device_list.wxss */

.container {
  width: 100vw;
	height: 100vh;
  position: fixed;
  background-color: #f5f5f5;
}

.top_container {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-between;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  background-color: #2F7DF6;
}

.top_container .left-bg {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100% - 120rpx);
  height: 60rpx;
  margin-left: 45rpx;
  background-color: #61A2F8;
  border-radius: 30rpx;
}

.left-bg .area-text {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 28rpx;
  color: white;
}

.top_container .icon-search {
  position: relative;
  display: flex;
  width: 45rpx;
  height: 45rpx;
  margin-left: 15rpx;
  margin-right: 45rpx;
}

.swiper-tab {
  position: fixed;
  display: flex;
	top: 100rpx;
	left: 0;
	width: 100%;
  height: 100rpx;
  background-color: #2F7DF6;
  border-bottom: 2rpx solid #E5E5E5;
}

.swiper_box {
	position: absolute;
	top: 220rpx;
  left: 0;
  bottom: 20rpx;
	display: block;
	width: 100%;
	height: calc(100% - 220rpx);
	overflow: hidden;
}

.talents_list_a {
	width: 100%;
  height: calc(100% - 108rpx);
}

.talents_list {
	width: 100%;
  height: calc(100% - 108rpx);
}

.more {
	padding: 10rpx 0 60rpx 0;
	width: 100%;
	display: flex;
  align-items: center;
}

.more text {
	width: 100%;
	font-size: 24rpx;
	color: rgba(0, 0, 0, 0.7);
  text-align: center;
  margin-bottom: 60rpx;
}

.swiper-bg {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 600rpx;
  height: 100rpx;
}

.swiper-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
	width: 160rpx;
  height: 100rpx;
  font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #ADC3FA;
	letter-spacing: 0;
  line-height: 100rpx;
}

.on {
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: white;
	letter-spacing: 0;
  border-bottom: 8rpx solid #2F7DF6;
}


.recommend-content-background {
  position: relative;
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
}

.recommend-content-left-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-right: 10rpx;
}

.recommend-sub-left-content {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: white;
}

.recommend-video-bg {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 205rpx;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #dddddd;
}

.recommend-video-bg .image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
}

.recommend-video-bg .no-image {
  width: 100rpx;
  height: 100rpx;
}

.recommend-video-title {
  position: relative;
  display: flex;
  margin-top: 15rpx;
  margin-left: 25rpx;
  font-size: 30rpx;
  color: #515151;
}

.recommend-sub-content-title {
  position: relative;
  display: flex;
  margin-top: 20rpx;
  margin-left: 25rpx;
  font-size: 30rpx;
  color: #515151;
}

.recommend-sub-content-online {
  position: relative;
  display: flex;
  align-items: center;
  height: 32rpx;
  /* margin-top: 15rpx; */
  margin-left: 25rpx;
  font-size: 22rpx;
  color: #ababab;
}

.recommend-content-right-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-left: 10rpx;
}

.recommend-sub-right-content {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  /* height: 220rpx; */
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: white;
}

.recommend-sub-image {
  position: absolute;
  width: 77rpx;
  height: 77rpx;
  right: 25rpx;
  bottom: 25rpx;
}