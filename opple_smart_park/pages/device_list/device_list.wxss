/* pages/device_list/device_list.wxss */

.container {
  width: 100vw;
	height: 100vh;
	position: fixed;
}

.item-background {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #243954;
}

.item-background .left-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 85%;
  margin-top: 0;
}

.item-background .right-arrow {
  position: relative;
  display: flex;
  margin: auto 40rpx auto auto;
  width: 32rpx;
  height: 32rpx;
}

.item-background .status {
  position: absolute;
  display: flex;
  top: 20rpx;
  right: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.left-bg .phone {
  position: relative;
  display: flex;
  height: 44rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: white;
}

.left-bg .pathway {
  position: relative;
  display: flex;
  height: 40rpx;
  margin-left: 40rpx;
  margin-top: 16rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: white;
}

.left-bg .trackResult {
  position: relative;
  display: flex;
  height: 40rpx;
  margin-left: 40rpx;
  margin-top: 12rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.swiper_box {
	position: absolute;
	top: 120rpx;
	left: 0;
	display: block;
	width: 100%;
	height: calc(100% - 108rpx - 100rpx);
	overflow: hidden;
}

.label_item {
  display: flex;
  justify-content: center;
  align-items: center;
	width: 470rpx;
  height: 80rpx;
  margin: 20rpx auto 20rpx auto;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  border-radius: 10rpx;
  border: 2rpx solid rgba(216,216,216,1);
}

.talents_list_a {
	width: 100%;
  height: calc(100% - 108rpx);
}

.talents_list_b {
	width: 100%;
  height: 100%;
}

.more {
	padding: 10rpx 0 60rpx 0;
	width: 100%;
	display: flex;
  align-items: center;
}

.more text {
	width: 100%;
	font-size: 24rpx;
	color: rgba(0, 0, 0, 0.7);
  text-align: center;
  margin-bottom: 60rpx;
}

.swiper-tab {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
	top: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
  border-bottom: 2rpx solid #E5E5E5;
}

.swiper-bg {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 418rpx;
  height: 100rpx;
}

.swiper-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
	width: 160rpx;
  height: 100rpx;
  font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #999999;
	letter-spacing: 0;
  line-height: 100rpx;
}

.on {
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #333333;
	letter-spacing: 0;
  border-bottom: 8rpx solid #343434;
}


.recommend-content-background {
  position: relative;
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
}

.recommend-content-left-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-right: 10rpx;
}

.recommend-sub-left-content {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 440rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(180,180,180,0.20);
}

.recommend-content-right-bg {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-left: 10rpx;
}

.recommend-sub-right-content {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 440rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(180,180,180,0.20);
}

.recommend-sub-image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  background-color: #D1D4D9;
}

.recommend-sub-title {
  position: relative;
  display: flex;
  height: 42rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
}

.recommend-sub-money-bg {
  position: relative;
  display: flex;
  align-items: baseline;
  height: 52rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.recommend-sub-money-tag {
  position: relative;
  display: flex;
  font-family: DINAlternate-Bold;
  font-size: 28rpx;
  color: rgba(0,0,0,0.60);
}

.recommend-sub-money {
  position: relative;
  display: flex;
  margin-left: 5rpx;
  font-family: DINAlternate-Bold;
  font-size: 44rpx;
  color: rgba(0,0,0,0.60);
}

.recommend-sub-time {
  position: absolute;
  display: flex;
  height: 32rpx;
  top: 388rpx;
  right: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #9F9FB2;
}